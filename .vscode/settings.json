{
  // Use prettier for all files that ESLint doesn't support
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  // Use ESLint for all file types that it supports (which still uses prettier behind the scenes)
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript][typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.organizeImports": "explicit"
  },
  "eslint.useFlatConfig": true,
  "eslint.run": "onSave",
  "eslint.format.enable": true,
  "vitest.rootConfig": "vitest.config.ts",
  // Only using relative imports because these are packages/libraries, and it can break consumers
  // otherwise. Unless I learn something new in the future on how to handle that.
  "javascript.preferences.importModuleSpecifier": "project-relative",
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "github.copilot.chat.cli.customAgents.enabled": true,
  "github.copilot.chat.askQuestions.enabled": true
}
