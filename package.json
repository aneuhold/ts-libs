{
  "name": "ts-libs",
  "private": true,
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "build": "pnpm -r --stream build",
    "watch": "tsx scripts/watchAll.ts",
    "lint": "pnpm -r --stream lint",
    "test": "pnpm -r --stream test",
    "preparePkg": "pnpm -r --stream --parallel preparePkg",
    "upgrade:core": "pnpm update '@aneuhold/*' --latest && pnpm -r --stream upgrade:core"
  },
  "devDependencies": {
    "@aneuhold/eslint-config": "^1.3.13",
    "@types/node": "^24.9.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  }
}
