{
  "name": "@aneuhold/core-ts-lib",
  "author": "Anton G. Neuhold Jr.",
  "license": "MIT",
  "version": "2.1.4",
  "description": "A core library for all of my TypeScript projects",
  "type": "module",
  "scripts": {
    "build": "rimraf lib && tsc --project tsconfig.build.json && tsx ./scripts/copyTsFiles.ts",
    "watch": "tsc -w -p tsconfig.build.json",
    "lint": "eslint",
    "test": "jest",
    "jsr:validate": "tsx ./scripts/validateJsrPublish.ts",
    "checkAll": "pnpm build && pnpm lint && pnpm test && pnpm jsr:validate",
    "jsr:publish": "tsx ./scripts/publishJsr.ts",
    "upgrade:all": "pnpm up",
    "publish:local": "pnpm publish --registry http://localhost:4873 --access public --no-git-checks --force",
    "unpublish:local": "npm unpublish --registry http://localhost:4873 --force"
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aneuhold/ts-libs.git"
  },
  "bugs": {
    "url": "https://github.com/aneuhold/ts-libs/issues"
  },
  "homepage": "https://github.com/aneuhold/ts-libs/tree/main/packages/core-ts-lib#readme",
  "keywords": [
    "Scripting",
    "Node.js"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "eslint": "^9.26.0",
    "jest": "^29.7.*",
    "jsr": "*",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "tsx": "^4.19.4",
    "typescript": "~5.8.3"
  }
}
