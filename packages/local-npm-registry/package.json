{
  "name": "@aneuhold/local-npm-registry",
  "author": "Anton G. Neuhold Jr.",
  "license": "MIT",
  "version": "2.1.3",
  "description": "Manages local npm package installations and updates for the ts-libs monorepo.",
  "type": "module",
  "scripts": {
    "build": "rimraf lib && pnpm run copy-files && tsc -p tsconfig.build.json",
    "copy-files": "tsx scripts/copyTsFiles.ts",
    "dev": "tsc -w -p tsconfig.build.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "jsr:publish": "tsx scripts/publishJsr.ts",
    "jsr:validate": "tsx scripts/validateJsrPublish.ts"
  },
  "main": "lib/index.js",
  "bin": {
    "local-npm": "lib/index.js"
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aneuhold/core-ts-lib.git"
  },
  "bugs": {
    "url": "https://github.com/aneuhold/core-ts-lib/issues"
  },
  "homepage": "https://github.com/aneuhold/core-ts-lib#readme",
  "keywords": [
    "Scripting",
    "Node.js"
  ],
  "dependencies": {
    "@aneuhold/core-ts-lib": "workspace:*",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "eslint": "^9.26.0",
    "jest": "^29.7.*",
    "jsr": "*",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "tsx": "^4.19.4",
    "typescript": "~5.8.3",
    "@types/fs-extra": "^11.0.4"
  }
}
